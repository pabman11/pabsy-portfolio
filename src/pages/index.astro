---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  if (import.meta.env.ASTRO_SHOW_DRAFTS === 'true') {
    return true;
  }
  return !data.draft;
});
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
const featuredPosts = sortedPosts.slice(0, 3);

const skills = [
  'Astro', 'React', 'Vue', 'TypeScript', 'JavaScript',
  'Tailwind CSS', 'Magento 2', 'PHP', 'HTML/CSS'
];
---

<BaseLayout 
  title="Pablo Fornali - Desarrollador Frontend" 
  description="Portfolio de Pablo Fornali. Desarrollador frontend especializado en Astro, React, Vue y Magento 2."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-20 md:py-32">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6">
          Pablo Fornali
        </h1>
        <p class="text-2xl md:text-3xl text-primary font-semibold mb-6">
          Desarrollador Frontend
        </p>
        <p class="text-xl text-gray-600 mb-10 max-w-3xl mx-auto">
          Desarrollador frontend en <a href="https://magestio.com" target="_blank" class="text-primary hover:text-primary-dark transition-colors">Magestio Ecommerce</a>. 
          Apasionado por el desarrollo web, el rol y la narrativa.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/proyectos" class="btn-primary inline-block">
            Ver proyectos
          </a>
          <a href="/contacto" class="btn-outline inline-block">
            Contactar
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
        Tecnologías
      </h2>
      <div class="flex flex-wrap justify-center gap-4">
        {skills.map((skill) => (
          <span class="px-6 py-3 bg-gray-100 text-gray-900 rounded-lg font-medium hover:bg-primary hover:text-white transition-all duration-200 cursor-default">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Blog Posts -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
          Últimas entradas del blog
        </h2>
        <a href="/blog" class="text-primary hover:text-primary-dark font-semibold transition-colors">
          Ver todos →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            cover={post.data.cover}
            coverAlt={post.data.coverAlt}
            tags={post.data.tags}
            slug={post.slug}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
