---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  pubDate: string;
  cover: ImageMetadata;
  coverAlt: string;
  tags: string[];
  slug: string;
}

const { title, description, pubDate, cover, coverAlt, tags, slug } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg border border-gray-200 hover:border-primary transition-all duration-300">
  <a href={`/blog/${slug}`} class="block">
    <div class="overflow-hidden">
      <Image
        src={cover}
        alt={coverAlt}
        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
        widths={[400, 600]}
        sizes="(max-width: 768px) 400px, 600px"
      />
    </div>
    <div class="p-6">
      <div class="flex items-center text-sm text-gray-500 mb-2">
        <time datetime={pubDate}>{formattedDate}</time>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">
        {title}
      </h3>
      <p class="text-gray-600 mb-4 line-clamp-3">
        {description}
      </p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</article>
